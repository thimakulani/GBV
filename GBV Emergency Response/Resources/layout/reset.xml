<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="landing_page"
    android:background="@drawable/view_style"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_content"
        android:layout_margin="5dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_caption"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:id="@+id/input_content"
            >
           
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white"
                android:textColorHint="@color/white"
                style="@style/InputStyles"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_email_address"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/InputEmail"
                    android:inputType="textEmailAddress"
                    android:autoText="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/reset"
                android:textColor="#ffffff"
                app:backgroundTint="#FF363640"
                app:cornerRadius="20dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_toStartOf="@+id/txtOr"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtOr"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="@string/text_view_already_have_account"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/txtOr"
                    android:background="@color/white"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BtnBackToLogin"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_btn_login"
                android:textColor="#ffffff"
                app:backgroundTint="#FF363640"
                app:cornerRadius="20dp" 
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>